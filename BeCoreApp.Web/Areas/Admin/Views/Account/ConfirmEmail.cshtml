@model bool
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>
        Crypto Life Fund
    </title>
    <meta name="description" content="Latest updates and statistic charts">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!--begin::Web font -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Poppins:300,400,500,600,700", "Roboto:300,400,500,600,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <!--end::Web font -->
    <!--begin::Base Styles -->
    <link href="~/admin-side/metronic/assets/vendors/base/vendors.bundle.css" rel="stylesheet" type="text/css" />
    <link href="~/admin-side/metronic/assets/demo/default/base/style.bundle.css" rel="stylesheet" type="text/css" />
    <!--end::Base Styles -->
    <link rel="shortcut icon" href="~/client-side/cryptonia/cryptonia-package/intro/images/favicon.ico" type="image/x-icon">
</head>
<!-- end::Head -->
<!-- end::Body -->
<body class="m--skin- m-header--fixed m-header--fixed-mobile m-aside-left--enabled m-aside-left--skin-dark m-aside-left--offcanvas m-footer--push m-aside--offcanvas-default">
    <!-- begin:: Page -->

    <div class="m-grid m-grid--hor m-grid--root m-page">
        <div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor m-login m-login--signin m-login--2 m-login-2--skin-2" id="m_login" style="background-image: url(/admin-side/metronic/assets/app/media/img//bg/bg-3.jpg);">
            <div class="m-grid__item m-grid__item--fluid	m-login__wrapper">
                <div class="m-login__container">
                    <div class="m-login__logo" style="margin: 0 auto 1.5rem auto;">
                        <a href="#">
                            <img src="~/client-side/cryptonia/cryptonia-package/intro/images/logoIcon.png" height="80" />
                        </a>
                    </div>

                    <div class="m-login__signup" style="display:block">
                        <div class="m-login__head">
                            <h3 class="m-login__title">Confirm Email</h3>
                            @if (Model == true)
                            {
                                <div class="m-login__desc">
                                    Thank you for confirming your email address
                                </div>
                                <div class="m-login__desc">
                                    <a href="/admin/account/login"><strong>go to Login</strong></a>
                                </div>
                            }
                            else
                            {
                                <div class="m-login__desc">Confirming your email address is fail</div>
                                <div class="m-login__desc">
                                    <a href="/home/index"><strong>go to Home</strong></a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- end:: Page -->
    <!--begin::Base Scripts -->
    <script src="~/admin-side/metronic/assets/vendors/base/vendors.bundle.js" type="text/javascript"></script>
    <script src="~/admin-side/metronic/assets/demo/default/base/scripts.bundle.js" type="text/javascript"></script>
    <!--end::Base Scripts -->
    <!-- Custom Theme Style -->
    <link href="~/admin-app/controllers/account/confirm-email.css" rel="stylesheet" />
</body>
<!-- end::Body -->
</html>