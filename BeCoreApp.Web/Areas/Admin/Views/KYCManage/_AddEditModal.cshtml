<div id="modal-add-edit" class="modal fade" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title badge badge-secondary-light" id="exampleModalLabel">
                    Chi Tiết KYC
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        &times;
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmMaintainance">
                    <input type="hidden" id="hdId" />
                    <input type="hidden" id="hdAppUserId" />
                    <div class="form-group">
                        <label class="form-control-label font-weight-semibold">Họ & Tên</label>
                        <input type="text" id="inputFullName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="form-control-label font-weight-semibold">Tài Khoản</label>
                        <input type="text" id="inputUserName" class="form-control">
                    </div>

                    <div class="form-group">
                        <label class="form-control-label font-weight-semibold">ID</label>
                        <input type="text" id="inputID" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="form-control-label font-weight-semibold">Email</label>
                        <input type="text" id="inputEmail" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="form-control-label font-weight-semibold">Số Điện Thoại</label>
                        <input type="text" id="inputPhoneNumber" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="form-control-label font-weight-semibold">CMND</label>
                        <input type="text" id="inputCMND" class="form-control">
                    </div>

                    <div class="form-group">
                        <label class="form-control-label font-weight-semibold">Địa Chỉ Ví USDT Withdraw</label>
                        <input type="text" id="inputWithdrawPublishKey" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="form-control-label font-weight-semibold" style="width:100%">Ảnh CMND</label>
                        <img id="imgCMNDImage" />
                    </div>
                    <div class="form-group">
                        <label class="form-control-label font-weight-semibold" style="width:100%">Ảnh Thẻ NGân Hàng</label>
                        <img id="imgBankCardImage" />
                    </div>
                    <div class="form-group">
                        <label class="form-control-label font-weight-semibold" style="width:100%">Ảnh Hóa Đơn Ngân Hàng/Điện Nước</label>
                        <img id="imgBankBillImage" />
                    </div>
                    <div class="form-group">
                        <label for="badgeType" class="form-control-label font-weight-semibold">Trạng Thái</label>
                        <div id="badgeType"></div>
                    </div>
                    <div class="form-group">
                        <label for="txtReason" class="form-control-label font-weight-semibold">Ghi Chú</label>
                        <textarea id="txtReason" class="form-control" rows="3"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer text-center">
                <button type="button" id="btnCancel" class="btn btn-dark" data-dismiss="modal">Đóng</button>
                <button type="button" id="btnLock" class="btn btn-secondary-light"><i class="fa fa-lock"></i> Khóa</button>
                <button type="button" id="btnUnLock" class="btn btn-primary-light"><i class="fa fa-folder-open"></i> Mở</button>
                <button type="button" id="btnReject" class="btn btn-danger"><i class="fa fa-remove"></i> Hủy</button>
                <button type="button" id="btnApproval" class="btn btn-success"><i class="fa fa-check"></i> Duyệt</button>
            </div>
        </div>
    </div>
</div>