        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Thông Tin Mạng Lưới</div>
                    </div>
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="col-lg-5 col-md-12">
                                <div class="wideget-user-desc d-flex">
                                    <div class="wideget-user-img">
                                        <img class="avatar h-9 w-9 brround" src="~/admin-side/dashlot-admin/HTML/assets/images/users/user.png" alt="img">
                                    </div>
                                    <div class="user-wrap mt-0">
                                        <h6 class="mb-2 font-weight-semibold">Họ Tên: @Model.FullName</h6>
                                        <h6 class="mb-2 fw-400">Số CMND: @Model.CMND</h6>
                                        <h6 class="mb-2 fw-400">Email: @Model.Email</h6>
                                        <h6 class="mb-2 fw-400">SĐT: @Model.PhoneNumber</h6>
                                        <h6 class="mb-2 fw-400">Member: @Model.Member</h6>
                                        <h6 class="mb-2 fw-400">ID: @Model.ID</h6>
                                        <h6 class="mb-2 fw-400">Người Giới Thiệu: @Model.Referal</h6>
                                        <h6 class="mb-2 fw-400">Cập Nhật KYC: @Html.Raw(Model.IsUpdatedKYC == true ? "<span class='badge badge-success-light'>Đã Cập Nhật</span>" : "<span class='badge badge-secondary-light'>Chưa Cập Nhật</span>")</h6>
                                        <h6 class="mb-2 fw-400" id="contentActive">Kích Hoạt: @Html.Raw(Model.IsActivated == true ? "<span class='badge badge-success-light'>Đã Kích Hoạt</span>" : "<span class='badge badge-secondary-light'>Chưa Kích Hoạt</span> <a href='#' class='btn-activate btn btn-warning btn-sm mb-2 mb-xl-0 text-white'><i class='fa fa-bolt'></i> Kích Hoạt</a>")</h6>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-7 col-md-12">
                                <div class="row ml-3  ml-auto mt-lg-0">
                                    <div class="col-xl-12 mt-5 mt-xl-0">
                                        <div class="pr-4 mt-lg-0 d-xl-block">
                                            <p class=" mb-3 fw-400 h6">ID Members: @Model.IDMember</p>
                                            <p class=" mb-3 fw-400 h6">Tổng Số: @Model.TotalMember member</p>
                                            <p class=" mb-3 fw-400 h6">Tổng Số Kích Hoạt: @Model.TotalActivated member</p>
                                            <p class=" mb-3 fw-400 h6">Tổng Số Xác Nhận KYC: @Model.TotalUpdatedKYC member</p>
                                            @if (Model.IsUpdatedKYC)
                                            {
                                                <p class="mb-0 font-weight-semibold h6">Link Liên Kết:</p>
                                                <div class="input-group">
                                                    <input type="text" readonly class="form-control" id="txtReferlink" value="@Model.ReferalLink">
                                                    <span class="input-group-append">
                                                        <button class="btn btn-primary" id="btnCopyReferlink" type="button">
                                                            <i class="fa fa-copy"></i>
                                                        </button>
                                                    </span>
                                                </div>
                                            }
                                            else
                                            {
                                                <p class="mb-0 font-weight-semibold h6">Link Liên Kết: N/A</p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
