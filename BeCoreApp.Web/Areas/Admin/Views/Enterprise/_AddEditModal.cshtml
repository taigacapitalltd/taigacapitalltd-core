<div id="modal-add-edit" class="modal fade" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title badge badge-secondary-light" id="exampleModalLabel">
                    Thêm & cập nhật doanh nghiệp
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        &times;
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmMaintainance">
                    <div class="form-group m-form__group">
                        <input type="hidden" id="hidId" value="0" />
                        <label for="txtName" class="form-control-label">Tiêu đề</label>
                        <input type="text" name="txtName" class="form-control m-input m-input--air" id="txtName">
                    </div>

                    <div class="form-group m-form__group">
                        <label class="form-control-label">
                            Lĩnh Vực
                        </label>
                        <div class="m-select2 m-select2--air">
                            @Html.DropDownList("FieldId", null, "", new { @class = "form-control m-select2", multiple = "multiple" })
                        </div>
                    </div>

                    <div class="form-group m-form__group">
                        <label class="form-control-label">
                            Tỉnh/Thành Phố
                        </label>
                        <div class="m-select2 m-select2--air">
                            @Html.DropDownList("ProvinceId", null, "", new { @class = "form-control m-select2" })
                        </div>
                    </div>

                    <div class="form-group m-form__group">
                        <label class="form-control-label">
                            Quận/Huyện
                        </label>
                        <div class="m-select2 m-select2--air" id="boxDllDistrictId">
                            @Html.DropDownList("DistrictId", null, "", new { @class = "form-control m-select2" })
                        </div>
                    </div>

                    <div class="form-group m-form__group">
                        <label class="form-control-label">
                            Xã/Phường
                        </label>
                        <div class="m-select2 m-select2--air" id="boxDllWardId">
                            @Html.DropDownList("WardId", null, "", new { @class = "form-control m-select2" })
                        </div>
                    </div>

                    <div class="form-group m-form__group">
                        <label for="txtImage" class="form-control-label">Logo</label>
                        <div class="input-group">
                            <input type="text" name="txtImage" class="form-control m-input m-input--air" id="txtImage" />
                            <input type="file" id="fileInputImage" style="display:none" />
                            <span class="input-group-btn">
                                <input type="button" id="btnSelectImg" class="btn btn-default" value="Browser" />
                            </span>
                        </div>
                    </div>

                    <div class="form-group m-form__group">
                        <label for="txtEmail" class="form-control-label">Email</label>
                        <input type="text" name="txtEmail" class="form-control m-input m-input--air" id="txtEmail">
                    </div>

                    <div class="form-group m-form__group">
                        <label for="txtWebsite" class="form-control-label">Website</label>
                        <input type="text" name="txtWebsite" class="form-control m-input m-input--air" id="txtWebsite">
                    </div>

                    <div class="form-group m-form__group">
                        <label for="txtAddress" class="form-control-label">Địa chỉ</label>
                        <input type="text" name="txtAddress" class="form-control m-input m-input--air" id="txtAddress">
                    </div>

                    <div class="form-group m-form__group">
                        <label for="txtPhone" class="form-control-label">Số điện thoại</label>
                        <input type="text" name="txtPhone" class="form-control m-input m-input--air" id="txtPhone">
                    </div>

                    <div class="form-group m-form__group">
                        <label for="txtHotline" class="form-control-label">Hotline</label>
                        <input type="text" name="txtHotline" class="form-control m-input m-input--air" id="txtHotline">
                    </div>

                    <div class="form-group m-form__group">
                        <label for="txtContent" class="form-control-label">Chú thích</label>
                        <textarea id="txtContent" rows="6" class="form-control"></textarea>
                    </div>

                    <div class="form-group m-form__group">
                        <label for="txtSeoPageTitle" class="form-control-label"><span class="m-badge m-badge--warning m-badge--dot"></span> Seo Page Title</label>
                        <input type="text" id="txtSeoPageTitle" class="form-control m-input m-input--air">
                    </div>

                    <div class="form-group m-form__group">
                        <label for="txtSeoKeywords" class="form-control-label"><span class="m-badge m-badge--warning m-badge--dot"></span> Seo Keywords</label>
                        <input type="text" id="txtSeoKeywords" class="form-control m-input m-input--air">
                    </div>

                    <div class="form-group m-form__group">
                        <label for="txtSeoDescription" class="form-control-label"><span class="m-badge m-badge--warning m-badge--dot"></span> Seo Description</label>
                        <input type="text" id="txtSeoDescription" class="form-control m-input m-input--air">
                    </div>

                    <div class="form-group m-form__group">
                        <label class="m-checkbox m-checkbox--bold m-checkbox--state-brand m--margin-right-10">
                            <input type="checkbox" checked="checked" id="ckStatus">
                            Trạng thái
                            <span></span>
                        </label>

                        <label class="m-checkbox m-checkbox--bold m-checkbox--state-brand">
                            <input type="checkbox" checked="checked" id="ckShowHome">
                            Hiển thị trang chủ
                            <span></span>
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnCancel" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button type="button" id="btnSave" class="btn btn-success">Lưu</button>
            </div>
        </div>
    </div>
</div>