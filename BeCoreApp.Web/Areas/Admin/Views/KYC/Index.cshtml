@model bool
@{
    ViewData["Title"] = "KYC";
}

@section Scripts{
    <script src="~/admin-app/controllers/kyc/index.js" asp-append-version="true"></script>
    <script>
        var kycObj = new KYCController();
        kycObj.initialize();
    </script>
}
@section Styles{
    <link href="~/admin-app/controllers/kyc/index.css" rel="stylesheet" asp-append-version="true" />
}

<div class="app-content icon-content">
    <div class="section">
        <!-- Page-header opened -->
        <div class="page-header">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#"><i class="ti-package mr-1"></i> Trang Chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
            </ol>
            <div class="mt-3 mt-lg-0">
                <div class="d-flex align-items-center flex-wrap text-nowrap">
                    <button type="button" class="btn btn-success btn-icon-text mr-2 mb-2 mb-md-0"><i class="fe fe-download"></i>Import</button>
                    <button type="button" class="btn btn-secondary btn-icon-text mr-2 mb-2 mb-md-0"><i class="fe fe-printer"></i>Print</button>
                    <button type="button" class="btn btn-primary btn-icon-text mb-2 mb-md-0"><i class="fe fe-download-cloud "></i>Download</button>
                </div>
            </div>
        </div>
        <!-- Page-header closed -->
        <!-- row opened -->
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Thông Tin KYC</div>
                        <div class="card-options">
                            <a href="#" class="card-options-collapse" data-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a>
                            <a href="#" class="card-options-fullscreen" data-toggle="card-fullscreen"><i class="fe fe-maximize"></i></a>
                            <a href="#" class="card-options-remove" data-toggle="card-remove"><i class="fe fe-x"></i></a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12 col-lg-12 col-xl-6">
                                <div class="card box-shadow-0 mb-xl-0">
                                    <div class="card-body p-6 about-con pabout">
                                        <div class="card-title text-centertext-muted text-gray">
                                            <h3>KYC Mẫu</h3>
                                        </div>
                                        <img src="~/admin-side/dashlot-admin/HTML/assets/images/users/kycmau.jpg" class="">
                                    </div>
                                </div>
                            </div>

                            @if (Model)
                            {
                                <div class="col-md-12 col-lg-12 col-xl-6">
                                    <div id="formKYC" class="mb-5">
                                        <div class="card box-shadow-0 mb-xl-0">
                                            <div class="card-body p-6 about-con pabout">
                                                <div class="card-title text-centertext-muted text-danger">
                                                    <p>
                                                        - Hãy chứng minh Bạn là người thật, và duy nhất chỉ có 1 ID.
                                                    </p>
                                                    <p>
                                                        - Gửi ảnh vừa chụp không qua bất cứ một phần mềm chỉnh sửa nào để được duyệt nhanh nhất. Cảm Ơn !
                                                    </p>
                                                </div>
                                                <div class="form-group">
                                                    <label for="txtWithdrawPublishKey" class="form-control-label">Địa Chỉ Ví USDT ERC20 Withdraw</label>
                                                    <input type="text" id="txtWithdrawPublishKey" class="form-control m-input m-input--air">
                                                </div>
                                                <div class="form-group">
                                                    <label for="txtCMNDImage" class="form-control-label"> Ảnh CMND Mặt Trước</label>
                                                    <div class="input-group">
                                                        <input type="text" id="txtCMNDImage" class="form-control m-input m-input--air" />
                                                        <input type="file" id="fileInputCMNDImage" style="display:none" />
                                                        <span class="input-group-btn">
                                                            <input type="button" id="btnSelectCMNDImg" class="btn btn-default" value="Chọn" />
                                                        </span>
                                                    </div>
                                                    <div class="mt-2 mb-5" id="contentCMNDImage"></div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="txtImage" class="form-control-label">Ảnh Thẻ Ngân Hàng Mặt Trước</label>
                                                    <div class="input-group">
                                                        <input type="text" id="txtBankCardImage" class="form-control m-input m-input--air" />
                                                        <input type="file" id="fileInputBankCardImage" style="display:none" />
                                                        <span class="input-group-btn">
                                                            <input type="button" id="btnSelectBankCardImg" class="btn btn-default" value="Chọn" />
                                                        </span>
                                                    </div>
                                                    <div class="mt-2 mb-5" id="contentBankCardImage"></div>
                                                </div>
                                                <div class="form-group">
                                                    <label for="txtImage" class="form-control-label">Ảnh Tự Sướng Cùng CMND Mặt Trước</label>
                                                    <div class="input-group">
                                                        <input type="text" id="txtBankBillImage" class="form-control m-input m-input--air" />
                                                        <input type="file" id="fileInputBankBillImage" style="display:none" />
                                                        <span class="input-group-btn">
                                                            <input type="button" id="btnSelectBankBillImg" class="btn btn-default" value="Chọn" />
                                                        </span>
                                                    </div>
                                                    <div class="mt-2 mb-5" id="contentBankBillImage"></div>
                                                </div>
                                                <div class="form-footer mt-2">
                                                    <a href="#" class="btn btn-primary btn-block" id="btnSendKYC">Gửi KYC</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>


                        <h5 class="modal-title badge badge-secondary-light" id="exampleModalLabel">
                            Danh sách gửi KYC
                        </h5>
                        <div class="table-responsive product-datatable">
                            <div id="example_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="example" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="example_info">
                                            <thead>
                                                <tr>
                                                    <th>Địa Chỉ Ví USDT</th>
                                                    <th>CMND</th>
                                                    <th>Thẻ Ngân Hàng</th>
                                                    <th>Ảnh Chụp</th>
                                                    <th>Trạng Thái</th>
                                                    <th>Ghi Chú</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody id="tbl-content"></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script id="table-template" type="x-tmpl-mustache">
    <tr>
        <td>{{WithdrawPublishKey}}</td>
        <td>{{{CMNDImage}}}</td>
        <td>{{{BankBillImage}}}</td>
        <td>{{{BankCardImage}}}</td>
        <td>{{{Type}}}</td>
        <td>{{Reason}}</td>
        <td width="30">
            <a href="#" data-id="{{Id}}" class="btn-view btn btn-warning btn-sm mb-2 mb-xl-0 text-white"
               data-toggle="tooltip" data-original-title="Cập Nhật"><i class="fa fa-eye"></i></a>
        </td>
    </tr>
</script>
@Html.Partial("_AddEditModal")
