                                <label class="form-label font-weight-normal fs-14">Ví Nhận</label>
                                <select class="form-control nice-select">
                                    <option>VS TOKEN 2</option>
                                    @*<option>VÍ GAME</option>
                                        <option>VÍ WIN</option>
                                        <option>VSTOKEN1</option>*@
                                </select>
                            </div>
                            <button class="btn btn-success btn-block mt-4" type="submit" id="btnExchange">Chuyển Ngay</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
