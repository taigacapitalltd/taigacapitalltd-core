                        </div>
                    </div>
                    <div class="card-body">
                        <form>

                            @Html.AntiForgeryToken()
                            <div class="form-group mb-2">
                                <label class="form-label font-weight-normal fs-14">Ví Chuyển</label>
                                <select class="form-control nice-select">
                                    <option>VS TOKEN 1</option>
                                </select>
                            </div>
                            <div class="text-center">
                                <div class="exchange mt-2 mb-2">
                                    <i class="fa fa-exchange inline-block btn-sm btn-primary-light p-2 pt-0 pb-0 box-shadow-0"></i>
                                </div>
                            </div>
