                                            <div style="text-align:center;padding-bottom:20px;" class="qr-code" id="qrcodeCanvasVT"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane " id="tab-2-ethereum">
                                <div class="col-lg-12 col-md-12 p-3">
                                    <form style="margin-top: 2rem;">

                                        @Html.AntiForgeryToken()
                                        <div class="form-group">
                                            <label class="form-control-label m--font-bold">Mã Giao Dịch</label>
                                            <input class="form-control" type="text" id="txtTransactionHash">
                                        </div>

                                        <div class="flex mt-4">
                                            <button id="btnUpdateDepositEther" class="btn btn-secondary mr-2">Cập Nhật Ether Phí <i class="fa fa-check"></i></button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-6 col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Chuyển Đổi</div>
                        <div class="card-options">
                            <a href="#" class="card-options-collapse" data-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a>
                            <a href="#" class="card-options-fullscreen" data-toggle="card-fullscreen"><i class="fe fe-maximize"></i></a>
