                                                                <img src="@item.Path" title="slider-41.jpg" width="870" height="490" class="rev-slidebg" data-no-retina>
                                                            </rs-slide>
                                                        }
                                                    </rs-slides>
                                                    <rs-progress class="rs-bottom" style="visibility: hidden !important;"></rs-progress>
                                                </rs-module>
