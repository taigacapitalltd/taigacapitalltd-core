@model BeCoreApp.Models.ProductViewModels.DetailViewModel
@{
    ViewData["Title"] = Model.Product.Name;
    ViewData["MetaKeyword"] = Model.Product.SeoKeywords;
    ViewData["MetaDescription"] = Model.Product.SeoDescription;
}
<div id="tbay-main-content">
    <section id="tbay-breadscrumb" class="tbay-breadscrumb">
        <div class="container">
            <div class="breadscrumb-inner">
                <ol class="tbay-woocommerce-breadcrumb breadcrumb">
                    <li><a href="/">Trang Chủ</a></li>
                    <li><a href="/">Sản Phẩm</a></li>
                    <li>Chi Tiết</li>
                </ol>
            </div>
        </div>
    </section>
    <section id="main-container" class="main-content container">
        <div class="row">
            <div id="main-content" class="singular-shop col-xs-12 col-xs-12 col-md-12 col-lg-9 pull-right">
                <div id="primary" class="content-area">
                    <div id="content" class="site-content" role="main">
                        <div class="woocommerce-notices-wrapper"></div>
                        <div class="style-vertical product type-product status-publish first instock product_cat-fresh-meat product_cat-milk-cream product_cat-ocean-foods product_tag-food-theme product_tag-organic-food product_tag-organic-theme has-post-thumbnail sale featured taxable shipping-taxable purchasable product-type-simple">
                            <div class="row">
                                <div class="image-mains">
                                    <div class="vc_column-inner">
                                        <div class="wpb_wrapper">
