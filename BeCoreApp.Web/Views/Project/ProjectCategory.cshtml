@model BeCoreApp.Models.ProjectViewModels.CatalogViewModel
@*@{
        ViewData["Title"] = Model.Data.CurrentPage == 1 ? Model.MenuItemVM.Name : Model.MenuItemVM.Name + " - Page " + Model.Data.CurrentPage;
        ViewData["MetaKeyword"] = Model.Data.CurrentPage == 1 ? Model.MenuItemVM.SeoKeywords : Model.MenuItemVM.SeoKeywords + " - Page " + Model.Data.CurrentPage;
        ViewData["MetaDescription"] = Model.Data.CurrentPage == 1 ? Model.MenuItemVM.SeoDescription : Model.MenuItemVM.SeoDescription + " - Page " + Model.Data.CurrentPage;
