@model BeCoreApp.Models.ContactPageViewModel
@{
    ViewData["Title"] = "Liên Hệ";
    ViewData["MetaKeyword"] = "Liên Hệ";
    ViewData["MetaDescription"] = "Liên Hệ";
}
@section Scripts{   
    <script src="~/client-app/controllers/feedback/index.js"></script>
    <script>
        var feedbackObj = new FeedbackController();
        feedbackObj.initialize();
    </script>
}
<div class="app-content">
    <div class="container">
        <!-- Page-header opened -->
        <div class="page-header">
            <!--  row opened -->
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/"><i class="ti-home mr-1"></i> Trang Chủ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Liên Hệ</li>
            </ol>
            <!--  row closed -->
        </div>
        <!-- row opened -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Thông Tin Liên Hệ</h3>
                        <div class="card-options ">
                            <a href="#" class="card-options-collapse" data-toggle="card-collapse"><i class="fe fe-chevron-up"></i></a>
                            <a href="#" class="card-options-fullscreen" data-toggle="card-fullscreen"><i class="fe fe-maximize"></i></a>
                            <a href="#" class="card-options-remove" data-toggle="card-remove"><i class="fe fe-x"></i></a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6 col-md-12 col-xl-6 mb-xl-0">
                                <div class="contact-info mt-5">
                                    <ul class="timelineleft">
                                        <li>
                                            <i class="fa fa-bolt bg-success"></i>
                                            <div class="timelineleft-item">
                                                <h3 class="timelineleft-header no-border">
                                                    <a href="#">Địa Chỉ:</a>
                                                    <span class="text-muted">5B Pho Quang, Ward 2, Tan Binh Dist, HoChiMinh City</span>
                                                </h3>
                                            </div>
                                        </li>
                                        <li>
                                            <i class="fa fa-phone bg-grey"></i>
                                            <div class="timelineleft-item">
                                                <h3 class="timelineleft-header no-border">
                                                    <a href="#">Phone:</a>
                                                    <span class="text-muted">0944 156 789</span>
                                                </h3>
                                            </div>
                                        </li>
                                        <li>
                                            <i class="fa fa-globe bg-yellow-dark"></i>
                                            <div class="timelineleft-item">
